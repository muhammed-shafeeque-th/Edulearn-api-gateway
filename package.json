{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "EduLearn API Gateway - Microservices gateway with authentication, rate limiting, and observability",
  "main": "dist/index.js",
  "author": "Muhammed Shafeeque",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --require tsconfig-paths/register --respawn --ignore-watch node_modules --transpile-only src/index.ts",
    "start:dev": "nodemon --watch src --ext ts,js,json --require tsconfig-paths/register --ignore node_modules --exec ts-node --transpile-only src/index.ts",
    "build": "npm run clean && tsc && tsc-alias",
    "build:prod": "npm run clean && tsc --project tsconfig.prod.json && tsc-alias",
    "proto:clean": "rimraf src/domains/service-clients/**/proto/generated/*",
    "proto:gen": "npm run proto:clean && npm run proto:gen:user && npm run proto:gen:auth && npm run proto:gen:notification && npm run proto:gen:course && npm run proto:gen:order && npm run proto:gen:payment",
    "proto:gen:auth": "node scripts/gen-proto.js auth",
    "proto:gen:user": "node scripts/gen-proto.js user",
    "proto:gen:notification": "node scripts/gen-proto.js notification",
    "proto:gen:course": "node scripts/gen-proto.js course",
    "proto:gen:chat": "node scripts/gen-proto.js chat",
    "proto:gen:order": "node scripts/gen-proto.js order",
    "proto:gen:payment": "node scripts/gen-proto.js payment",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --ext .js,.jsx,.ts,.tsx --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security-check": "npm audit --audit-level moderate",
    "type-check": "tsc --noEmit",
    "benchmark": "node dist/benchmark/load-test.js",
    "profile": "node --prof dist/index.js",
    "analyze": "node --prof-process isolate-*.log > profile.txt"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.810.0",
    "@aws-sdk/s3-request-presigner": "^3.810.0",
    "@grpc/grpc-js": "^1.13.0",
    "@grpc/proto-loader": "^0.7.13",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.59.0",
    "@opentelemetry/sdk-node": "^0.201.1",
    "async-retry": "^1.3.3",
    "bcrypt": "^5.1.1",
    "bloom-filters": "^3.0.4",
    "cloudinary": "^2.6.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-protobuf": "^3.21.4",
    "helmet": "^8.1.0",
    "inversify": "^7.0.1",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.2",
    "opossum": "^8.4.0",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-loki": "^6.1.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.18",
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.9",
    "@types/opossum": "^8.1.8",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "artillery": "^2.0.0",
    "autocannon": "^7.15.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-proto": "^2.6.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  }
}
